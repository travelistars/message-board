<%= render "errors", obj: @message %>
<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="message_name">名前:</label>
    <div class="col-sm-10">
        <%= f.text_field :name, :class => 'form-control', :size => "120", :placeholder => "名前を入力してください。" %>
    </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label" for="message_body">内容:</label>
    <div class="col-sm-10">
        <%= f.text_area :body, :class => 'form-control', :size => "119x3", :placeholder => "内容を入力してください。" %>
    </div>
    </div>
        <div class="form-group">
        <label class="col-sm-2 control-label" for="message_age">年齢:</label>
    <div class="col-sm-10">
        <%= f.text_field :age, :class => 'form-control', :size => "120", :placeholder => "年齢を入力してください。" %>
    </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10" >
        <%= f.submit class: "btn btn-primary" %>
        </div>
    </div>
<% end %>
<%= render "errors", obj: @message %>
<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="formGroupInputLarge">名前:</label><br>
    <div class="col-sm-10">
        <%= f.text_field :name, :size => "120", :placeholder => "名前を入力してください。" %>
    </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="formGroupInputLarge">内容:</label><br>
    <div class="col-sm-10">
        <%= f.text_area :body, :size => "119x3", :placeholder => "内容を入力してください。" %>
    </div>
    </div>
        <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="formGroupInputLarge">年齢:</label><br>
    <div class="col-sm-10">
        <%= f.text_field :age, :size => "120", :placeholder => "年齢を入力してください。" %>
    </div>
    </div>
    <div class="form-group form-group-sm">
        <div class="col-sm-offset-2 col-sm-10" ><br>
        <%= f.submit class: "btn btn-primary" %>
        </div>
    </div>
<% end %>

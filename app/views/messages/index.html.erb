<div class="panel panel-default">
    <div class="panel-heading">
        
     メッセージ一覧
    </div>
        <div class="panel-body">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        <br>
        <% end %>
    </div>
</div>
        
<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="formGroupInputLarge">名前:</label><br>
    <div class="col-sm-10">
        <%= f.text_field :name, :size => "120", :placeholder => "名前を入力してください。" %>
    </div>
    </div>
    <div class="form-group form-group-sm">
        <label class="col-sm-2 control-label" for="formGroupInputLarge">内容:</label><br>
    <div class="col-sm-10">
        <%= f.text_area :body, :size => "119x3", :placeholder => "内容を入力してください。" %>
    </div>
    </div>
    <div class="form-group form-group-sm">
        <div class="col-sm-offset-2 col-sm-10" ><br>
        <%= f.submit class: "btn btn-primary" %>
        </div>
    </div>
<% end %>